{
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "module": "CommonJS",
    "target": "ES2020",
    "composite": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node"],
    "strict": true,
    "resolveJsonModule": true,
    "declaration": true,
    "sourceMap": true
  },
  "references": [
    { "path": "../../common/db" }
  ],
  "include": ["src"]
}
